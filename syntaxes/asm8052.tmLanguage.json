{
  "name": "ASM8052",
  "scopeName": "source.asm8052",
  "fileTypes": [
    "a51",
    "asm",
    "c51",
    "h51",
    "s"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#mnemonics"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": ";.*$",
          "name": "comment.line.semicolon.asm8052"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "include": "#directives-comm"
        }
      ]
    },
    "directives-comm": {
      "patterns": [
        {
          "match": "\\.(?i)\\b(org|db|dw|ds|equ|set|end|include)\\b",
          "name": "keyword.control.directive.comm.asm8052"
        },
        {
          "match": "\\.(?i)\\b(if|else|endif)\\b",
          "name": "keyword.control.directive.comm.asm8052"
        },
        {
          "match": "\\.(?i)\\b(macro|endm)\\b",
          "name": "keyword.control.directive.comm.asm8052"
        },
        {
          "match": "\\.(?i)\\b(rept|endr|irp|irpc)\\b",
          "name": "keyword.control.directive.comm.asm8052"
        }
      ]
    },
    "mnemonics": {
      "patterns": [
        {
          "match": "(?i)\\b(ACALL|ADD|ADDC|AJMP|ANL|CJNE|CLR|CPL|DA|DEC|DIV|DJNZ|INC|JB|JBC|JC|JMP|JNB|JNC|JNZ|JZ|LCALL|LJMP|MOV|MOVC|MOVX|MUL|NOP|ORL|POP|PUSH|RET|RETI|RRC|RL|RLC|RR|SETB|SJMP|SUBB|SWAP|XCH|XCHD|XRL)\\b",
          "name": "keyword.other.mnemonic.asm8052"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "match": "(?i)\\b(A|ACC|AB|B|C|DPH|DPL|DPTR|PSW|SP|A?R[0-7])\\b",
          "name": "support.variable.registers.asm8052"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.asm8052"
            }
          ],
          "name": "string.quoted.double.asm8052"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b0[xX][0-9a-fA-F]+\\b",
          "name": "constant.numeric.hex.asm8052"
        },
        {
          "match": "\\b0[bB][01_]+\\b",
          "name": "constant.numeric.bin.asm8052"
        },
        {
          "match": "\\b\\d+\\b(?!\\$)",
          "name": "constant.numeric.dec.asm8052"
        },
        {
          "match": "'(?:\\\\.|[^'\\\\])'",
          "name": "constant.numeric.char.asm8052"
        }
      ]
    }
  }
}